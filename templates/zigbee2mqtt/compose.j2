name: zigbee2mqtt

services:
  zigbee2mqtt:
    image: ghcr.io/koenkk/zigbee2mqtt
    restart: unless-stopped
    volumes:
     - /opt/zigbee2mqtt/data:/app/data
     - /run/udev:/run/udev:ro
    ports:
     - 8080:8080
    environment:
     - TZ=Europe/Berlin
    devices:
     - {{ zigbee_host_adapter }}:{{ zigbee_adapter }}
